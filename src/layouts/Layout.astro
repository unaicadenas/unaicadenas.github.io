---
import '@/styles/global.css';

import Header from "@/sections/Header.astro";
import Footer from "@/sections/Footer.astro";

interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		
	}
	html {
		height: 100vh;
		background:
			radial-gradient(1400px 900px at 18% 14%, rgba(22,163,114,0.45), transparent 60%),
			radial-gradient(1200px 900px at 82% 26%, rgba(37,99,235,0.35), transparent 62%),
			linear-gradient(180deg, #030712 0%, #041625 40%, #051b2f 65%, #020617 100%);
	}
	body {
		margin: 0;
		display: grid;
		min-height: 100dvh;
		grid-template-rows: auto 1fr auto;
	}
</style>
