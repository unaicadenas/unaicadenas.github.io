<nav class="fixed top-4 left-1/2 -translate-x-1/2 z-50 w-full px-4">
  <div
    class="mx-auto max-w-6xl
           relative
           flex items-center justify-between
           px-6 py-4
           rounded-full
           border border-slate-700/50
           bg-slate-900/70 backdrop-blur">

    <!-- Logo -->
    <a href="/" class="text-sm font-semibold tracking-wide text-gray-100">
      <span class="text-2xl font-bold">UCQ</span>
    </a>

    <!-- Desktop links -->
    <ul
      class="hidden md:flex absolute left-1/2 -translate-x-1/2
             items-center gap-8 text-sm text-gray-400">
      <li><a href="#home" class="hover:text-gray-100 transition">Inicio</a></li>
      <li><a href="#about" class="hover:text-gray-100 transition">Sobre mí</a></li>
      <li><a href="#projects" class="hover:text-gray-100 transition">Proyectos</a></li>
      <li><a href="#stack" class="hover:text-gray-100 transition">Stack</a></li>
      <li><a href="#contact" class="hover:text-gray-100 transition">Contacto</a></li>
    </ul>

    <!-- Right controls -->
    <div class="flex items-center gap-3">

      <!-- Theme toggle -->
      <div
        class="relative flex items-center gap-1
               rounded-full border border-slate-700/50
               bg-slate-800 px-1 py-1">

        <span
          id="theme-indicator"
          class="absolute top-1 left-1
                 w-7 h-7
                 rounded-full
                 bg-sky-400
                 transition-transform duration-300">
        </span>

        <label class="relative z-10 w-7 h-7 flex items-center justify-center cursor-pointer">
          <input type="radio" name="theme" value="light" class="sr-only">
          <svg class="w-4 h-4 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <circle cx="12" cy="12" r="4" stroke-width="2"/>
            <path stroke-width="2"
              d="M12 2v2M12 20v2M4.93 4.93l1.41 1.41
                 M17.66 17.66l1.41 1.41M2 12h2M20 12h2
                 M4.93 19.07l1.41-1.41M17.66 6.34l1.41-1.41"/>
          </svg>
        </label>

        <label class="relative z-10 w-7 h-7 flex items-center justify-center cursor-pointer">
          <input type="radio" name="theme" value="system" class="sr-only">
          <svg class="w-4 h-4 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <rect x="3" y="4" width="18" height="14" rx="2" stroke-width="2"/>
            <path stroke-width="2" d="M8 20h8"/>
          </svg>
        </label>

        <label class="relative z-10 w-7 h-7 flex items-center justify-center cursor-pointer">
          <input type="radio" name="theme" value="dark" class="sr-only">
          <svg class="w-4 h-4 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-width="2"
              d="M21 12.79A9 9 0 1111.21 3
                 a7 7 0 009.79 9.79z"/>
          </svg>
        </label>
      </div>

      <!-- Mobile menu button -->
      <button
        id="menu-btn"
        aria-label="Abrir menú"
        class="md:hidden p-2 rounded-full
               hover:bg-slate-800 transition">
        <svg class="w-6 h-6 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>

    </div>
  </div>

  <!-- Mobile menu -->
  <div
    id="mobile-menu"
    class="hidden md:hidden
           mt-3 mx-auto max-w-6xl
           rounded-2xl
           border border-slate-700/50
           bg-slate-900/80 backdrop-blur
           px-6 py-4">

    <ul class="flex flex-col gap-4 text-sm text-gray-300">
      <li><a href="#home" class="hover:text-white">Inicio</a></li>
      <li><a href="#about" class="hover:text-white">Sobre mí</a></li>
      <li><a href="#projects" class="hover:text-white">Proyectos</a></li>
      <li><a href="#skills" class="hover:text-white">Skills</a></li>
      <li><a href="#contact" class="hover:text-white">Contacto</a></li>
    </ul>
  </div>
</nav>

<script is:inline>
  // Mobile menu
  const btn = document.getElementById("menu-btn");
  const menu = document.getElementById("mobile-menu");

  btn.addEventListener("click", () => {
    menu.classList.toggle("hidden");
  });

  // Theme logic
  const html = document.documentElement;
  const radios = document.querySelectorAll('input[name="theme"]');
  const indicator = document.getElementById("theme-indicator");
  const themes = ["light", "system", "dark"];

  const getSystemTheme = () =>
    window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";

  function applyTheme(theme) {
    const resolved = theme === "system" ? getSystemTheme() : theme;
    html.classList.toggle("dark", resolved === "dark");

    const index = themes.indexOf(theme);
    indicator.style.transform = `translateX(${index * 32}px)`;
  }

  const savedTheme = localStorage.getItem("theme") || "system";
  document.querySelector(`input[value="${savedTheme}"]`).checked = true;
  applyTheme(savedTheme);

  radios.forEach(radio => {
    radio.addEventListener("change", (e) => {
      const theme = e.target.value;
      localStorage.setItem("theme", theme);
      applyTheme(theme);
    });
  });

  window.matchMedia("(prefers-color-scheme: dark)")
    .addEventListener("change", () => {
      if (localStorage.getItem("theme") === "system") {
        applyTheme("system");
      }
    });
</script>